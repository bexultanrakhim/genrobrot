function T = T4(alpha,a,d,theta)
    %alpha = radtodeg(alpha);
    T =simplify([sin(theta+pi/2)              , -sin(theta)                     , 0               , a                  ; ...
                 sin(theta)*sin(alpha + p)  , sin(theta+pi/2)*sind(alpha+90)  , -sin(alpha)    , -sin(alpha)*d     ; ...
                 sin(theta)*sin(alpha)       , sin(theta+pi/2)*sind(alpha)     , sin(alpha+90)  , sin(alpha+90)*d   ; ...
                 0                            , 0                               , 0               , 1]);
end